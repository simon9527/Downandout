<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_base_radio_button_pager_header"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:background="@color/Black">

    <ImageButton
        android:id="@+id/ib_title_menu"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/drawer_normal"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_base_radio_button_pager_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="默认标题"
        android:textColor="@color/tealGreen"
        android:textSize="25sp" />
    <ImageButton
        android:id="@+id/ib_control_layout"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/news_cele_list"
        android:layout_centerVertical="true"/>
</RelativeLayout>