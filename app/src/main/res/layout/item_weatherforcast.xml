<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_weatherforcast"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weatherforcast_bg"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_item_weatherforcast_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="2016-01-07"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_item_weatherforcast_max"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Max ↑35°"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_item_weatherforcast_min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mix ↓-5°"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
