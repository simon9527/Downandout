<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@color/yahooGray"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp">

            <TextView
                android:id="@+id/tv_news_home_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:paddingBottom="20dp"
                android:paddingLeft="40dp"
                android:paddingRight="20dp"
                android:background="@color/colorWhite"
                android:textSize="12sp"
                android:text="成厚薄均匀的片条约200g做法1、洗干净紫薯表面的泥土，然后削去表皮2、把紫薯切成厚薄均匀的片片（厚薄随意）3、取出碟子，把紫薯码在碟子里边4、什么调料都不需要，直接摆蒸架上，放入电饭锅，煮饭时候一起蒸熟即可" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_news_home_date"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="JAN\n16"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:background="@drawable/circleshape_green"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_news_home_cate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="国内新闻"
                android:textColor="@color/Black"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/tv_news_home_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="11:23:17"
                android:textColor="@color/indianRed"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
