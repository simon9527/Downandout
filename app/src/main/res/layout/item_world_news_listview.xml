<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yahooGray"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_news_detail_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/colorWhite"
        android:padding="12dp"
        android:textSize="22sp"
        android:textColor="@color/Black"
        android:lines="2"
        android:gravity="center_vertical"
        android:text="“斯内普”艾伦·里克曼去世 享年69岁"/>
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/iv_news_detail_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_news_detail_source"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="腾讯娱乐"
            android:textSize="12sp"
            android:textColor="@color/Black"/>
        <TextView
            android:id="@+id/tv_news_detial_pubDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2016-01-14 23:37:14"
            android:textSize="12sp"
            android:textColor="@color/Black"/>
    </LinearLayout>
</LinearLayout>
