<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_celebrity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/yahooGray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="1dp"
        android:background="@color/yahooDarkGray">

        <ImageView
            android:id="@+id/iv_celebrity_item"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/news_toppic_default" />
        <TextView
            android:id="@+id/tv_celebrity_item"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/Black" />
    </LinearLayout>
</LinearLayout>