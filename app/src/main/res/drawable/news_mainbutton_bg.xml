<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 在xml布局中，通过drawable来引用-->

    <!--RadioButton 被按下时，变成淡绿绿色图片-->
    <item android:drawable="@mipmap/news_ma_press"  android:state_pressed="true"></item>
    <!--RadioButton 被抬起时，变成白色图片-->
    <item android:drawable="@mipmap/news_ma" android:state_pressed="false"></item>
    <!--RadioButton 被选中时，变成淡绿绿色图片-->
    <item android:drawable="@mipmap/news_ma_press" android:state_checked="true"></item>

</selector>

