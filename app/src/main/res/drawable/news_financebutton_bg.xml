<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 在xml布局中，通过drawable来引用-->

   <!-- 注意状态循序，如果把pressed放到第一位就做不到checked了-->
    <!--RadioButton 被选中时，变成淡绿绿色图片-->
    <item android:drawable="@mipmap/news_fi_press" android:state_checked="true"></item>
    <!--RadioButton 被按下时，变成淡绿绿色图片-->
    <item android:drawable="@mipmap/news_fi_press"  android:state_pressed="true"></item>
    <!--RadioButton 被抬起时，变成白色图片-->
    <item android:drawable="@mipmap/news_fi" android:state_pressed="false"></item>


</selector>

